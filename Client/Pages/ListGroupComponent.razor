<div class="jumbotron">
    <div class="container-fluid">
        <div class="row">
            @for (var i = 0; i < Movies.Count; i++)
            {
                <div class="col-md-4">
                    <div class=" card flex-md-row mb-4 box-shadow h-md-300">

                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="card">
                                <img src="@Movies[i].Image" alt="" width="200px" class="img-thumbnail">
                                <h5 class="card-title">@Movies[i].Name</h5>
                                <p class="card-text">@Movies[i].Sinopsis</p>
                                <p class="card-text">@Movies[i].Category</p>
                                <div class="card-footer">
                                    <p class="card-text">@Movies[i].Premier.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

