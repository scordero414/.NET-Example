<div class="jumbotron">
    @if (Movies == null)
    {
        <img src="/Images/loading.gif">
    }
    else
    {
        <div class="container-fluid">
            <div class="row">
                @foreach (var movie in GetMovies())
                {
                    <div class="col-md-4">
                        <div class=" card flex-md-row mb-4 box-shadow h-md-300">

                            <div class="card-body d-flex flex-column align-items-center">
                                <div class="card">
                                    <img src="@movie.Image" alt="" width="200px" class="img-thumbnail">
                                    <h5 class="card-title">@movie.Name</h5>
                                    <p class="card-text">@movie.Sinopsis</p>
                                    <p class="card-text">@movie.Category</p>
                                    <div class="card-footer">
                                        <p class="card-text">@movie.Premier.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>


                }
            </div>
        </div>
    }


</div>

